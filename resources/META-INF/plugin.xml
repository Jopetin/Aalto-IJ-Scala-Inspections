<idea-plugin>
    <id>fi.aalto.cs.inspections</id>
    <name>Aalto Scala Inspections</name>
    <version>0.0.1-SNAPSHOT</version>
    <vendor>LeTech Group at Aalto University</vendor>

    <description>A Scala plugin that expands the initial set of code inspections</description>

    <idea-version since-build="231.0"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.properties</depends>
    <depends>org.intellij.scala</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection implementationClass="org.jetbrains.plugins.scala.codeInspection.collections.OptionGetInspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.option.get.usage.display.name"
                         groupBundle="messages.InspectionBundle" groupPathKey="grouppath.scala" groupKey="group.aalto"
                         shortName="IllegalOptionGet" level="WARNING"
                         enabledByDefault="false" language="Scala"/>
        <localInspection implementationClass="org.jetbrains.plugins.scala.codeInspection.collections.OptionHeadOrLastInspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.option.head.or.last.usage.display.name"
                         groupBundle="messages.InspectionBundle" groupPathKey="grouppath.scala" groupKey="group.aalto"
                         shortName="IllegalOptionHeadOrLast" level="WARNING"
                         enabledByDefault="false" language="Scala"/>
        <localInspection implementationClass="org.jetbrains.plugins.scala.codeInspection.syntaticClarification.NullInspection"
                         bundle="messages.InspectionBundle"
                         key="inspection.null.usage.display.name"
                         groupBundle="messages.InspectionBundle" groupPathKey="grouppath.scala" groupKey="group.aalto"
                         shortName="IllegalNull" level="WARNING"
                         enabledByDefault="false" language="Scala"/>
    </extensions>

</idea-plugin>
